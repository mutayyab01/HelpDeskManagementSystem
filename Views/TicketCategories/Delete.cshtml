@model HelpDeskSystem.Models.TicketCategory

@{
	ViewData["Title"] = "Delete Ticket Category";
}

<div class="card shadow-sm rounded-4 mt-4">
	<div class="card-body">
		<h4 class="card-title text-danger">Confirm Deletion</h4>
		<p class="text-muted">Are you sure you want to permanently delete this ticket category?</p>
		<hr />

		<table class="table table-bordered table-striped table-responsive table-hover table-responsive-lg">
				<tbody>
					<tr>
						<th>@Html.DisplayNameFor(model => model.Code)</th>
						<td>@Html.DisplayFor(model => model.Code)</td>
					</tr>
					<tr>
						<th>@Html.DisplayNameFor(model => model.Name)</th>
						<td>@Html.DisplayFor(model => model.Name)</td>
					</tr>
					<tr>
						<th>@Html.DisplayNameFor(model => model.CreatedBy)</th>
						<td>@(Model.CreatedBy?.UserName ?? $"ID: {Model.CreatedBy?.Id}")</td>
					</tr>
					<tr>
						<th>@Html.DisplayNameFor(model => model.CreatedOn)</th>
						<td>@Html.DisplayFor(model => model.CreatedOn)</td>
					</tr>
					<tr>
						<th>@Html.DisplayNameFor(model => model.ModifiedBy)</th>
						<td>@(Model.ModifiedBy?.UserName ?? $"ID: {Model.ModifiedBy?.Id}")</td>
					</tr>
					<tr>
						<th>@Html.DisplayNameFor(model => model.ModifiedOn)</th>
						<td>@Html.DisplayFor(model => model.ModifiedOn)</td>
					</tr>
				</tbody>
			</table>

			<form asp-action="Delete" class="mt-3">
				<input type="hidden" asp-for="Id" />
				<button type="submit" class="btn btn-danger">
					<i class="bx bx-trash"></i> Delete Department
				</button>
				<a asp-action="Index" class="btn btn-secondary ms-2">
					<i class="bx bx-arrow-back"></i> Back to List
				</a>
			</form>
	</div>
</div>


