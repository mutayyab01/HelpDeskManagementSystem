@model HelpDeskSystem.ViewModels.TicketCategoryViewModel

@{
	ViewData["Title"] = "Index";
}
<div class="card rounded-4">
	<form id="myForm" asp-action="Index" method="post">
		<div class="col-md-12">
			<div class="row p-3">
				<div class="col-md-4">
					<div class="form-group">
						<label asp-for="Code" class="control-label"></label>
						<input asp-for="Code" class="form-control" />
					</div>
				</div>
				<div class="col-md-4">
					<div class="form-group">
						<label asp-for="Name" class="control-label"></label>
						<input asp-for="Name" class="form-control" />
					</div>
				</div>
				<div class="col-md-4">
					<div class="form-group">
						<label asp-for="CreatedById" class="control-label"></label>
						<select asp-for="CreatedById" class="form-control single-select" asp-items="ViewBag.CreatedById">
							<option value=" ">Select User</option>
						</select>
					</div>
				</div>
			</div>
			<div class="row p-3 float-end me-5">
				<div class="form-group">
					<button type="submit" class="btn btn-success px-5"><i class="fadeIn animated bx bx-search-alt"></i> Search</button>
					<button type="button" id="clearBtn" class="btn btn-danger px-5 ms-2"><i class="fadeIn animated bx bx-reset"></i> Clear</button>
				</div>
			</div>
		</div>
	</form>

</div>
<div class="card rounded-4">
	<div class="card-body">
		<div class="d-flex align-items-center">
			<h6 class="mb-0">Tickets Categories List</h6>
		</div>
		<p>
			<a asp-action="Create" class="btn btn-primary">Add New Ticket Category</a>
		</p>
		<table id="example" class="table table-bordered table-striped table-responsive table-hover table-responsive-lg">
			<thead>
				<tr>
					<th>
						@Html.DisplayNameFor(model => model.Code)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Name)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.CreatedBy)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.CreatedOn)
					</th>
					<th>Sub Categories</th>
					<th>View</th>
					<th>Edit</th>
					<th>Delete</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model.TicketCategories)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.Code)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Name)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.CreatedBy.FullName)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.CreatedOn)
						</td>
						<td>
							<a asp-action="Index" asp-controller="TicketSubCategories" asp-route-id="@item.Id" class="btn btn-primary">Sub Categories</a>
						</td>
						<td>
							<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
						</td>
						<td>
							<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Details</a>
						</td>
						<td>
							<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
