@model HelpDeskSystem.Models.SystemTask

@{
    ViewData["Title"] = "Delete System Task";
}

<div class="card shadow-sm rounded-4 mt-4">
    <div class="card-body">
        <p class="card-title text-danger">Are you sure you want to delete this System Task?</p>
        <hr />
        <table class="table table-bordered table-striped">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Code)</th>
                <td>@Html.DisplayFor(model => model.Code)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <td>@Html.DisplayFor(model => model.Name)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Parent)</th>
                <td>@Html.DisplayFor(model => model.Parent.Id)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.OrderNo)</th>
                <td>@Html.DisplayFor(model => model.OrderNo)</td>
            </tr>
        </table>

        <form asp-action="Delete" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bx bx-trash"></i> Confirm Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="bx bx-arrow-back"></i> Back to List
            </a>
        </form>
    </div>
</div>
