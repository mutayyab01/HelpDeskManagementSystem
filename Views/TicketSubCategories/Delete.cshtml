@model HelpDeskSystem.Models.TicketSubCategory

@{
    ViewData["Title"] = "Delete Ticket Subcategory";
}

<div class="card shadow-sm rounded-4 mt-4">
    <div class="card-body">
        <h4 class="card-title text-danger">Confirm Deletion</h4>
        <p class="text-muted">Are you sure you want to delete this ticket subcategory?</p>
        <hr />

        <table class="table table-bordered table-striped table-responsive table-hover table-responsive-lg">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Category)</th>
                <td>@(Model.Category?.Name ?? $"ID: {Model.Category?.Id}")</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Code)</th>
                <td>@Html.DisplayFor(model => model.Code)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <td>@Html.DisplayFor(model => model.Name)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.CreatedBy)</th>
                <td>@(Model.CreatedBy?.UserName ?? $"ID: {Model.CreatedBy?.Id}")</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.CreatedOn)</th>
                <td>@Html.DisplayFor(model => model.CreatedOn)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.ModifiedBy)</th>
                <td>@(Model.ModifiedBy?.UserName ?? $"ID: {Model.ModifiedBy?.Id}")</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.ModifiedOn)</th>
                <td>@Html.DisplayFor(model => model.ModifiedOn)</td>
            </tr>
        </table>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger">
                    <i class="bx bx-trash me-2"></i> Delete Subcategory
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bx bx-arrow-back me-2"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>