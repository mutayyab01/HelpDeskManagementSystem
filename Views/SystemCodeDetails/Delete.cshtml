@model HelpDeskSystem.Models.SystemCodeDetail

@{
    ViewData["Title"] = "Delete System Code Detail";
}

<div class="card shadow-sm rounded-4 mt-4">
    <div class="card-body">
        <h4 class="card-title text-danger">Confirm Deletion</h4>
        <p class="text-muted">Are you sure you want to delete this system code detail?</p>
        <hr />

        <table class="table table-bordered table-striped">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Code)</th>
                <td>@Html.DisplayFor(model => model.Code)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <td>@Html.DisplayFor(model => model.Description)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.OrderNo)</th>
                <td>@Html.DisplayFor(model => model.OrderNo)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.SystemCode)</th>
                <td>@Html.DisplayFor(model => model.SystemCode.Id)</td>
            </tr>
        </table>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">
                <i class="bx bx-trash"></i> Delete System Code Detail
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bx bx-arrow-back"></i> Back to List
            </a>
        </form>
    </div>
</div>
