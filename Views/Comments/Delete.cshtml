@model HelpDeskSystem.Models.Comment

@{
	ViewData["Title"] = "Delete Comment";
}

<div class="card shadow-sm rounded-4 mt-4">
	<div class="card-body">
		<h4 class="card-title text-danger">Confirm Deletion</h4>
		<p class="text-muted">Are you sure you want to permanently delete this Comment?</p>
		<hr />
		<table class="table table-bordered table-striped table-responsive table-hover table-responsive-lg">
			<tbody>
				<tr>
					<th>@Html.DisplayNameFor(model => model.Description)</th>
					<td>@Html.DisplayFor(model => model.Description)</td>
				</tr>
				<tr>
					<th>@Html.DisplayNameFor(model => model.Ticket)</th>
					<td>@(Model.Ticket?.Title ?? $"Ticket ID: {Model.Ticket?.Id}")</td>
				</tr>
				<tr>
					<th>@Html.DisplayNameFor(model => model.CreatedOn)</th>
					<td>@Html.DisplayFor(model => model.CreatedOn)</td>
				</tr>
				<tr>
					<th>@Html.DisplayNameFor(model => model.CreatedBy)</th>
					<td>@(Model.CreatedBy?.UserName ?? $"User ID: {Model.CreatedBy?.Id}")</td>
				</tr>
			</tbody>
		</table>

		<form asp-action="Delete" class="mt-4">
			<input type="hidden" asp-for="Id" />
			<div class="d-flex gap-2">
				<button type="submit" class="btn btn-danger">
					<i class="bx bx-trash me-2"></i> Confirm Delete
				</button>
				<a asp-action="Index" class="btn btn-secondary">
					<i class="bx bx-arrow-back me-2"></i> Cancel
				</a>
			</div>
		</form>
	</div>
</div>