@model HelpDeskSystem.Models.Comment

@{
    ViewData["Title"] = "Details";
}
<div class="card rounded-4">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h6 class="mb-0">Comments Details</h6>
        </div>
        <hr />
        <table class="table table-bordered table-striped table-responsive table-hover table-responsive-lg">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <td>
                    @Html.DisplayFor(model => model.Description)
                </td>
                <th>
                    @Html.DisplayNameFor(model => model.Ticket)
                </th>
                <td>
                    @Html.DisplayFor(model => model.Ticket.Id)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </th>
                <td>
                    @Html.DisplayFor(model => model.CreatedOn)
                </td>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedBy)
                </th>
                <td>
                    @Html.DisplayFor(model => model.CreatedBy.Id)
                </td>
            </tr>
        </table>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
