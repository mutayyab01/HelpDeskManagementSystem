@model HelpDeskSystem.ViewModels.AuditTrailViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="card rounded-4">
    <form id="myForm" asp-action="AssignedTickets" method="post">
        <div class="col-md-12">
            <div class="row p-3">
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Action" class="control-label"></label>
                        <input asp-for="Action" class="form-control" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Module" class="control-label"></label>
                        <input asp-for="Module" class="form-control" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="AffectedTable" class="control-label"></label>
                        <input asp-for="AffectedTable" class="form-control" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="AffectedColumns" class="control-label"></label>
                        <input asp-for="AffectedColumns" class="form-control" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="UserId" class="control-label"></label>
                        <select asp-for="UserId" class="form-control single-select" asp-items="ViewBag.CreatedById">
                            <option value=" ">Select User</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row p-3 float-end me-5">
                <div class="form-group">
                    <button type="submit" class="btn btn-success px-5"><i class="fadeIn animated bx bx-search-alt"></i> Search</button>
                    <button type="button" id="clearBtn" class="btn btn-primary px-5 ms-2"><i class="fadeIn animated bx bx-reset"></i> Clear</button>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="card rounded-4">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h6 class="mb-0">Recent Audit Trails</h6>
        </div>
        <table id="example" class="table table-bordered table-striped table-responsive table-hover table-responsive-lg">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Action)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Module)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AffectedTable)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TimeStamp)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.User)
                    </th>
                    <th>View</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.AuditTrails)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Action)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Module)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AffectedTable)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TimeStamp)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.FullName)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
